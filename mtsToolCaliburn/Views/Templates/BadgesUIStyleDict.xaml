                    xmlns:local="clr-namespace:mtsToolCaliburn.Views.Templates"
                     xmlns:vm="clr-namespace:mtsToolCaliburn.ViewModels.Templates">

    <vm:CornerRadiusRoundedConverter x:Key="CornerRadiusRoundedConverter"></vm:CornerRadiusRoundedConverter>
    <Style  x:Key="badge-primary" TargetType="Label">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Label}">
                    <Border  CornerRadius="2" BorderThickness="1"  Width="{TemplateBinding Width}"  Height="{TemplateBinding Height}"  Background="#b66dff" Padding="9 6" >
                        <ContentPresenter TextElement.FontSize="11px" TextElement.Foreground="#ffffff" TextElement.FontFamily="ubuntu-bold"  RecognizesAccessKey="True"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

